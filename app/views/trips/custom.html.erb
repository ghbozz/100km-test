
<%#= @trip.address %>
<div class="map-container">
  <%= form_tag custom_trip_path(@trip), method: :get, remote: true do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find by Category"
    %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
  <div class="venues-list">
    <%= render 'venues_list', venues: @venues %>
  </div>

<!-- MAP -->

  <div id="map"
       style="width: 100%; height: 88vh;"
       data-venue-markers="<%= @venue_markers.to_json %>"
       data-trip-marker="<%= @trip_marker.to_json %>"
       data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    <div class="save-trip-btn">
      <button class="nav_button">
        <%= link_to "Save Trip", profile_path %>
      </button>
    </div>
  </div>
</div>
