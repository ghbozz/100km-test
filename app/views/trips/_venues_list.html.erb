<h1>Venues List</h1>

<% venues.each do |venue| %>
<div class="venue-card">
  <div class="venue-details">
    <%= venue.name  %>
    <% if @trip.venues.include?(venue) %>
      <%= link_to "Remove", trip_venue_path(venue, params: {trip_id: @trip.id}), method: :delete, remote: true %>
    <% else %>
      <%= link_to "+", trip_venues_path(params: {trip_id: @trip.id, venue_id: venue.id}), method: :post, remote: true %>
    <% end %>
  </div>
  <% if venue.photo.attached? %>
  <%= cl_image_tag venue.photo.key %>
    <% else %>
    <%= image_tag('venue-img.jpeg') %>
  <% end %>
</div>
<% end %>

